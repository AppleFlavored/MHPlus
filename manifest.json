{
    "manifest_version": 2,
    "name": "Minehut+",
    "description": "Improve the look of Minehut's dashboard.",
    "version": "1.0",
    "icons": {
        "48": "images/icon48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.minehut.com/support/*",
                "*://*.minehut.com/servers",
                "*://*.minehut.com/shop/*",
                "*://*.minehut.com/dashboard/*",
                "*://*.minehut.com/profile/*",
                "*://*.minehut.com/market/*"
            ],
            "js": ["js/inject.js"]
        }
    ],
    "web_accessible_resources": [
        "css/*.css"
    ],
    "permissions": [
        "http://minehut.com/*",
        "https://minehut.com/*"
    ]
}