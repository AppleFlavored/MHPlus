{
    "manifest_version": 3,
    "name": "MH+",
    "description": "Improve the look of Minehut's dashboard.",
    "version": "1.3.1",
    "icons": {
        "48": "images/icon48.png"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.minehut.com/support/*",
                "*://*.minehut.com/servers",
                "*://*.minehut.com/shop/*",
                "*://*.minehut.com/dashboard/*",
                "*://*.minehut.com/profile/*",
                "*://*.minehut.com/market/*",
		        "*://minehut.com/",
		        "*://minehut.com/login"
            ],
            "js": ["js/inject.js"]
        }
    ],
    "web_accessible_resources": [{
        "resources": [
            "css/*.css",
            "css/forums/*.css"
        ],
        "matches": ["<all_urls>"]
    }],
    "permissions": [
        "storage",
        "webRequest"
    ],
    "host_permissions": [
        "http://minehut.com/*",
        "https://minehut.com/*"
    ]
}