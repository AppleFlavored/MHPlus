{
    "manifest_version": 2,
    "name": "MH+",
    "description": "Improve the look of Minehut's dashboard.",
    "version": "1.3.0",
    "icons": {
        "48": "images/icon48.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.minehut.com/support/*",
                "*://*.minehut.com/servers",
                "*://*.minehut.com/shop/*",
                "*://*.minehut.com/dashboard/*",
                "*://*.minehut.com/profile/*",
                "*://*.minehut.com/market/*",
		        "*://minehut.com/",
		        "*://minehut.com/login"
            ],
            "js": ["js/inject.js"]
        }
    ],
    "web_accessible_resources": [
        "css/*.css",
        "css/forums/*.css"
    ],
    "permissions": [
        "http://minehut.com/*",
        "https://minehut.com/*",
        "storage",
        "webRequest"
    ]
}